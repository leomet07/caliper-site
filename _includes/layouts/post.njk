---
layout: layouts/base.njk
---

{% set postcss %} {% include "styles/post.css" %} {% endset %}
<style>
	{{ postcss | cssmin | safe }}
</style>

<section>
	<span class="post-issue">
		{{ formattedIssue }}
	</span>
	<h1>{{ title }}</h1>
	<p class="post-author">
		{{ author }}
	</p>
</section>

<article>
	{{ content | safe }}
</article>

{% set currentCollection = page.url.split("/")[1] %}
{% set previousPost = collections[currentCollection] | getPreviousCollectionItem(page) %}
{% set nextPost = collections[currentCollection] | getNextCollectionItem(page) %}

<div class="collection-controls">
	{% if previousPost %}
		<a href="{{ previousPost.url }}" class="previous">Previous</a>
	{% endif %}
	{% if nextPost %}
		<a href="{{ nextPost.url }}" class="next">Next</a>
	{% endif %}
</div>
